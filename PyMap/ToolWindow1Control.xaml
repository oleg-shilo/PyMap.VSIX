<UserControl
    x:Class="PyMap.ToolWindow1Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PyMap"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
    Name="MyToolWindow"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
    Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:KewordColorConverter x:Key="KewordColorConverter" />
    </UserControl.Resources>
    <Grid>

        <ListBox
            x:Name="codeMapList"
            Margin="0,25,0,5"
            HorizontalContentAlignment="Stretch"
            Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"
            Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"
            ItemsSource="{Binding MemberList}"
            MouseDoubleClick="ListBox_MouseDoubleClick"
            PreviewMouseWheel="codeMapList_PreviewMouseWheel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border MinHeight="20">
                        <!--  Background="{Binding Color, Converter={StaticResource KewordColorConverter}}">  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="{x:Null}" Text="{Binding ContentType}" />
                            <Image
                                x:Name="temaplateRoot"
                                VerticalAlignment="Center"
                                Source="{Binding TypeIcon}"
                                Stretch="Fill" />
                            <TextBlock FontWeight="Normal" Text="{Binding Content}" />
                            <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                            <TextBlock
                                FontStyle="Italic"
                                FontWeight="Light"
                                Foreground="Gray"
                                Text="{Binding MemberContext}" />
                        </StackPanel>
                        <!--  Foreground="{Binding ElementName=codeMapList, Path=Background, Converter={StaticResource KewordColorConverter}}"  -->
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Expander
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            ExpandDirection="Right"
            FlowDirection="RightToLeft"
            IsExpanded="true"
            ToolTip="Adjust font settings">
            <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}">
                    Filter:
                </TextBlock>
                <TextBox
                    MinWidth="60"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Background="{Binding ElementName=codeMapList, Path=Background}"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}"
                    ToolTip="Class name filter" />
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}">
                    .
                </TextBlock>
                <TextBox
                    MinWidth="60"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Background="{Binding ElementName=codeMapList, Path=Background}"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}"
                    ToolTip="Member name filter" />
                <CheckBox
                    x:Name="IsDarkTheme"
                    VerticalAlignment="Center"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}">
                    Dark
                </CheckBox>
                <ComboBox
                    x:Name="fontWeights"
                    MinWidth="100"
                    SelectionChanged="fontWeights_SelectionChanged"
                    ToolTip="Select desired font weight"
                    Visibility="Collapsed" />
                <ComboBox
                    x:Name="fonts"
                    MinWidth="100"
                    SelectionChanged="fonts_SelectionChanged"
                    ToolTip="Select desired font"
                    Visibility="Collapsed" />
                <Button
                    x:Name="fontDec"
                    Width="20"
                    Click="fontDec_Click"
                    ToolTip="Decrease font size"
                    Visibility="Collapsed">
                    -
                </Button>

                <Button
                    x:Name="fontInc"
                    Width="20"
                    Click="fontInc_Click"
                    ToolTip="Increase font size"
                    Visibility="Collapsed">
                    +
                </Button>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>