<UserControl
    x:Class="PyMap.ToolWindow1Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PyMap"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
    Name="MyToolWindow"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
    Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:KewordColorConverter x:Key="KewordColorConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Expander
            Grid.Row="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            ExpandDirection="Right"
            FlowDirection="RightToLeft"
            IsExpanded="true"
            ToolTip="Adjust font settings">
            <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}">
                    Filter:
                </TextBlock>
                <TextBox
                    MinWidth="60"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Background="{Binding ElementName=codeMapList, Path=Background}"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}"
                    ToolTip="Class name filter" />
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}">
                    .
                </TextBlock>
                <TextBox
                    MinWidth="60"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Background="{Binding ElementName=codeMapList, Path=Background}"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}"
                    ToolTip="Member name filter" />
                <CheckBox
                    x:Name="IsDarkTheme"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Foreground="{Binding ElementName=codeMapList, Path=Foreground}">
                    Dark
                </CheckBox>
                <ComboBox
                    x:Name="fontWeights"
                    MinWidth="100"
                    SelectionChanged="fontWeights_SelectionChanged"
                    ToolTip="Select desired font weight"
                    Visibility="Collapsed" />
                <ComboBox
                    x:Name="fonts"
                    MinWidth="100"
                    SelectionChanged="fonts_SelectionChanged"
                    ToolTip="Select desired font"
                    Visibility="Collapsed" />
                <Button
                    x:Name="fontDec"
                    Width="20"
                    Click="fontDec_Click"
                    ToolTip="Decrease font size"
                    Visibility="Collapsed">
                    -
                </Button>

                <Button
                    x:Name="fontInc"
                    Width="20"
                    Click="fontInc_Click"
                    ToolTip="Increase font size"
                    Visibility="Collapsed">
                    +
                </Button>
            </StackPanel>
        </Expander>
        <ListBox
            x:Name="codeMapList"
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"
            Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"
            ItemsSource="{Binding MemberList}"
            PreviewMouseWheel="codeMapList_PreviewMouseWheel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border MinHeight="20">
                        <!--  Background="{Binding Color, Converter={StaticResource KewordColorConverter}}">  -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="{x:Null}" Text="{Binding ContentType}" />
                            <Image
                                x:Name="temaplateRoot"
                                VerticalAlignment="Center"
                                Source="{Binding TypeIcon}"
                                Stretch="Fill" />
                            <TextBlock FontWeight="Normal" Text="{Binding Content}" />
                            <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                            <TextBlock
                                FontStyle="Italic"
                                FontWeight="Light"
                                Foreground="Gray"
                                Text="{Binding MemberContext}" />
                        </StackPanel>
                        <!--  Foreground="{Binding ElementName=codeMapList, Path=Background, Converter={StaticResource KewordColorConverter}}"  -->
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Expander
            Grid.Row="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            ExpandDirection="Up"
            FlowDirection="LeftToRight"
            IsExpanded="false"
            ToolTip="Adjust mapping settings">
            <Grid Background="{Binding ElementName=codeMapList, Path=Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="CheckBox">
                        <Setter Property="Margin" Value="10,0,5,0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="{Binding ElementName=codeMapList, Path=Foreground}" />
                    </Style>

                    <Style TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="10,0,5,0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Right" />
                        <Setter Property="Foreground" Value="{Binding ElementName=codeMapList, Path=Foreground}" />
                    </Style>
                </Grid.Resources>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Methods:" />

                <CheckBox
                    x:Name="PublicMethods"
                    Grid.Row="0"
                    Grid.Column="1"
                    Checked="SettingsChanged"
                    Content="Public"
                    IsChecked="{Binding PublicMethods}"
                    Unchecked="SettingsChanged" />

                <CheckBox
                    x:Name="PrivateMethods"
                    Grid.Row="0"
                    Grid.Column="2"
                    Checked="SettingsChanged"
                    Content="Private"
                    IsChecked="{Binding PrivateMethods}"
                    Unchecked="SettingsChanged" />
                <!--  ##########################################################  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Properties:" />

                <CheckBox
                    x:Name="PublicProperties"
                    Grid.Row="1"
                    Grid.Column="1"
                    Checked="SettingsChanged"
                    Content="Public"
                    IsChecked="{Binding PublicProperties}"
                    Unchecked="SettingsChanged" />

                <CheckBox
                    x:Name="PrivateProperties"
                    Grid.Row="1"
                    Grid.Column="2"
                    Checked="SettingsChanged"
                    Content="Private"
                    IsChecked="{Binding PrivateProperties}"
                    Unchecked="SettingsChanged" />

                <!--  ##########################################################  -->

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Fields:" />

                <CheckBox
                    x:Name="PublicFields"
                    Grid.Row="2"
                    Grid.Column="1"
                    Checked="SettingsChanged"
                    Content="Public"
                    IsChecked="{Binding PublicFields}"
                    Unchecked="SettingsChanged" />

                <CheckBox
                    x:Name="PrivateFields"
                    Grid.Row="2"
                    Grid.Column="2"
                    Checked="SettingsChanged"
                    Content="Private"
                    IsChecked="{Binding PrivateFields}"
                    Unchecked="SettingsChanged" />
            </Grid>
        </Expander>
    </Grid>
</UserControl>